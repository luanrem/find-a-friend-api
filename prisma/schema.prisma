generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

enum PetAge {
  NEWBORN
  PUPPY
  YOUNG
  ADULT
  OLD
}

enum PetSize {
  EXTRASMALL
  SMALL
  MEDIUM
  LARGE
  EXTRALARGE
}

enum PetEnergy {
  LOW
  MEDIUM
  HIGH
}

enum PetAmbient {
  SMALL
  MEDIUM
  LARGE
  EXTRALARGE
}

model Org {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  cep           String
  address       String
  whatsapp      String   @unique
  password_hash String
  created_at    DateTime @default(now())

  pets Pet[]

  @@map("orgs")
}

model Pet {
  id         String     @id @default(uuid())
  name       String
  about      String?
  age        PetAge
  size       PetSize
  energy     PetEnergy
  ambient    PetAmbient
  created_at DateTime   @default(now())

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  dogPictures         PetPicture[]
  adoptionRequirement AdoptionRequirement[]

  @@map("pets")
}

model PetPicture {
  id         String   @id @default(uuid())
  url        String
  created_at DateTime @default(now())

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("pet_pictures")
}

model AdoptionRequirement {
  id          String   @id @default(uuid())
  requirement String
  created_at  DateTime @default(now())

  pet   Pet    @relation(fields: [petId], references: [id])
  petId String

  @@map("adoption_requirements")
}
